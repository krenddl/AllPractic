<Page x:Class="Budilnik.Views.TimerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Budilnik.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TimerPage">

    <Grid>
        <Viewbox>
            <StackPanel Margin="20" VerticalAlignment="Center">
                <TextBox x:Name="TBTimerOn"></TextBox>
                <TextBlock x:Name="TimerText"
                           FontSize="32"
                           HorizontalAlignment="Center"/>
                <StackPanel Orientation="Horizontal">
                    <Button Content="Старт"
        Click="StartButton_Click"
        Style="{StaticResource FancyRoundButtonStyle}"/>
                    <Button Style="{StaticResource FancyRoundButtonStyle}"
                            Margin="20 0 0 0"
                            x:Name="BtnBack"
                            Click="BtnBack_Click">Назад</Button>
                </StackPanel>
                
                
            </StackPanel>
        </Viewbox>
        
    </Grid>
</Page>
