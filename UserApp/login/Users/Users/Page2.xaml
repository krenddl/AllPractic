<Page x:Class="Users.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Users"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2">

    <Grid Background="White">
        <StackPanel>
            <TextBlock Text="Name">
            </TextBlock>
            <TextBox x:Name="Name"
                      Text="{Binding Name}"></TextBox>
            <TextBlock Text="Role"/>
            <ComboBox x:Name="cmbRole"
                      SelectedItem="{Binding Role}"
                      DisplayMemberPath="Role1"></ComboBox>
            <Button Content="Add" Click="BtnAdd2"></Button>
            <Button Content="Cancel" Click="BtnCancel2"></Button>
        </StackPanel>
    </Grid>
</Page>
